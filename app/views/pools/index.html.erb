

    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="container"; style= "margin-bottom: 10px">
  <br>
  <br>
  <br>
  <div class="container-small"><h5>Search by city</h5></div>
  <!-- #location search bar -->
  <div class="container-small">
    <form accept-charset="UTF-8" action="/pools" >
      <div class="row in-line-search">
        <div class="col search-input">
          <input type="text" class="form-control" placeholder="Location">
        </div>
        <div class="col search-input">
          <input type="number" class="form-control" placeholder="Number of swimmers">
        </div>
       <button type="submit" class="red-button">Search</button>
      </div>
    </form>
    </div>
  <!-- cars to show all pools -->
    <div class='main-container'>
      <div class='cards'>
        <% @pools.each do |pool| %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path pool.photos.first.key %>)">
          <h2><%= pool.name %></h2>
          </div>
        <% end %>
       </div>
    </div>

</div>

