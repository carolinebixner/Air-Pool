<div class="mg">
    <h2><%= @pool.name %></h2>

</div>


<br>
<br>
<br>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-sm-12">
      <% pic = @pool.photos.first  %>
      <%= cl_image_tag pic.key, height: 400, width: 450, crop: :fill %>
    </div>
    <div class="col-lg-6 col-sm-12">
     <div class="row img-up">
        <% @pool.photos.drop(1).each do |photo|%>
          <div class="col-6 img-mg">
            <%= cl_image_tag photo.key, height: 182, width: 200, crop: :fill %>
          </div>
        <% end  %>

      </div>
    </div>
  </div>
</div>


<br>
<br>
<br>

<div class="mg">
  <h2>About this pool</h2>


<br>
<br>
<br>


  <p><%= @pool.description %></p>

  <br>
  <br>
  <br>

         <div id="map"
     style="width: 50%; height: 200px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>

     <br>
     <br>
     <br>

  <h3>Location:</h3>

  <br>
  <br>

  <p><%= @pool.location %></p>

  <br>
  <br>

  <h3>Services:</h3>
  <br>
  <br>

  <div class="row center">
    <div class="col-lg-3 col-md-6 col-sm-6 right">
      <p>Has lifeguard</p>
      <p>Children friendly</p>
      <p>Jacuzzi section</p>
      <p>Climatization</p>
      <p>Pool slide</p>
    </div>
        <div class="col-lg-3 col-md-6 col-sm-6 left">
      <% questions_l = [@pool.has_lifeguard?, @pool.children_friendly?, @pool.jacuzzi_section?, @pool.climatization?, @pool.pool_side?]  %>
      <% responses = questions_l.map do |question| %>
        <% if question == true  %>
         <p><i class="fa fa-check green" aria-hidden="true"></i></p>
        <% else %>
       <p>  <i class="fa fa-times red" aria-hidden="true"></i></p>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 right block-left">
      <p>Has floats</p>
      <p>Towels include</p>
      <p>Pet friendly</p>
      <p>Salted water</p>
      <p>Includes bar</p>
    </div>
        <div class="col-lg-3 col-md-6 col-sm-6 left">
      <% questions_r = [@pool.has_floats?, @pool.towels_include?, @pool.pet_friendly?, @pool.salted_water?, @pool.includes_bar?] %>
          <% responses = questions_r.map do |question| %>
        <% if question == true  %>
          <p><i class="fa fa-check green" aria-hidden="true"></i></p>
        <% else %>
          <p>  <i class="fa fa-times red" aria-hidden="true"></i></p>
        <% end %>
      <% end %>
    </div>
  </div>

<div class="main-container">
  <h1> Please make your booking </h1>
  <%= simple_form_for [@pool, @booking] do |f| %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.button :submit %>
<% end %>
</div>

</div>

