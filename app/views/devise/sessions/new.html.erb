
<div class="main-container">
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media-cdn.tripadvisor.com/media/photo-s/11/9a/b0/6a/best-infinity-pool-ever.jpg);">
  <div class="container">
    <h1>Welcome back</h1>
    <br>
    <br>
    <h5 style="color:white">Let's have a splash</h5>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <div class="red-button"><%= f.button :submit, "Log in" %></div>
      </div>
    <% end %>
  </div>
</div>


<%= render "devise/shared/links" %>

</div>
