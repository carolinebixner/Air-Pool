<!-- COMPLETE FORM AT TOP OF PAGE TO LOOK FOR POOLS -->
<body>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('pool_banner.jpg')%>)">
<div class="main-container">
    <h1> Rent a pool <strong> and take a dip</strong></h1>
    <p> Have a mini vacation and relax </p>
    <div style="width:50%">
    <form accept-charset="UTF-8" action="/pools" method="get" >
      <div class="row in-line-search">
        <div class="col search-input">
          <input type="text" name = "query" class="form-control" placeholder="What city would you like to dive into?">
        </div>
       <button type="submit" class="red-button">Discover</button>
      </div>
    </form>
    </div>
</div>
</div>



<div class='main-container'>
<br><br>
<h2>Our best deals</h2>
<br><br>
<div class='cards'>
  <% @pools_sample.each do |pool| %>
  <a class = "link-card" href="/pools/<%=pool.id%>">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path pool.photos.first.key %>)">
    <div class = "card-trip-user">
      <p class="mt-2"><%= pool.user.name.capitalize %></p>
      <img src="<%= cl_image_path pool.user.avatar.key %>" class="avatar-bordered" />
    </div>
    <div class="card-trip-description">
      <h5 style="font-size:30px"><%= pool.name %></h5>
    </div>
    <div class= "d-flex justify-content">
      <p class= "card-trip-pricing mb-2 mr-2"><%=pool.price%>â‚¬</p>
      <p class="card-trip-pricing mb-2 ml-2"><%= pool.city.capitalize%></p>
    </div>
  </div>
  </a>
  <% end %>
  </div>
</div>
</body>
